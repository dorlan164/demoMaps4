<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Activado (gris claro) -->
    <item android:state_activated="true">
        <shape>
            <solid android:color="#FFDDDDDD"/>
        </shape>
    </item>
    <!-- Normal transparente -->
    <item>
        <shape>
            <solid android:color="@android:color/transparent"/>
        </shape>
    </item>
</selector>
